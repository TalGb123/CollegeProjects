      "configurations": [
            {
                  "type": "cppdbg",
                  "request": "launch",
                  "name": "Debug Card Game",
                  "program": "${workspaceFolder}/game.exe",
                  "args": [],
                  "stopAtEntry": false,
                  "cwd": "${workspaceFolder}",
                  "environment": [],
                  "externalConsole": true,
                  "MIMode": "gdb",
                  "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
                  "preLaunchTask": "C/C++: g++.exe build active file",
                  "setupCommands": [
